#include <stdio.h>
int main()
{
    int a,b,c;
    printf("Enter the two integers to be added ");
    scanf("%d %d",&a,&b);
    int *ptr1,*ptr2;
    ptr1=&a;
    ptr2=&b;
    c=*ptr1 + *ptr2;
    printf("%d",c);
    return 0;
}
#include <stdio.h>

int main()
{
    int a,b,c;
    printf("Enter the two integers to be added ");
    scanf("%d %d",&a,&b);
    c=*&a + *&b;
    printf("%d",c);
    return 0;
}

